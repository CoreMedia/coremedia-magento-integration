<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
  <body>

    <referenceBlock name="head.additional">
      <block class="CoreMedia\DefaultWidget\Block\Widget\Content" name="cm.external.head" as="cm.external.head">
        <arguments>
          <argument name="cm_view" xsi:type="string">externalHead</argument>
        </arguments>
      </block>
    </referenceBlock>

    <referenceContainer name="before.body.end">
      <block class="CoreMedia\DefaultWidget\Block\Widget\Content" name="cm.external.footer" as="cm.external.footer">
        <arguments>
          <argument name="cm_view" xsi:type="string">externalFooter</argument>
        </arguments>
      </block>
    </referenceContainer>

  </body>
</page>