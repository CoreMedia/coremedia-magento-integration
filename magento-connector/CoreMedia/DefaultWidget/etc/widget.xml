    <description>Widget for CoreMedia Content</description>
    <parameters>
      <parameter name="cm_placement" xsi:type="select" visible="true" sort_order="0" >
        <label translate="true">Placement</label>
        <options>
          <option name="default" value="main" selected="true">
            <label translate="true">Default</label>
          </option>
          <option name="header" value="header">
            <label translate="true">Header</label>
          </option>
          <option name="main" value="main">
            <label translate="true">Main</label>
          </option>
          <option name="footer" value="footer">
            <label translate="true">Footer</label>
          </option>
        </options>
      </parameter>
      <parameter name="cm_view" xsi:type="text" visible="true">
        <label translate="true">View</label>
        <value></value>
      </parameter>
    </parameters>
  </widget>
</widgets>